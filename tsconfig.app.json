{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": ["src/**/*.vue", "src/**/*.ts"],
  "exclude": ["src/**/__tests__/*", "node_modules"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    // Set to empty to avoid accidental inclusion of unwanted types
    "types": []
  }
}
